<!DOCTYPE html>
<html>
  <head>
    <title>User Address</title>
  </head>
  <body>
    <% if (success) { %>
      <h2>User Address:</h2>
      <p><%= address.addr1 %></p>
      <% if (address.addr2) { %>
        <p><%= address.addr2 %></p>
      <% } %>
      <p><%= address.city %>, <%= address.state %> <%= address.postalCode %></p>
      <p><%= address.country %></p>
      <p><%= message %></p>
    <% } else { %>
      <p><%= message %></p>
    <% } %>

    <% if (editable) { %>
      <form action="/api/address" method="post">
        <label for="addr1">Address Line 1:</label>
        <input type="text" name="addr1" value="<%= address.addr1 %>" required>

        <label for="addr2">Address Line 2:</label>
        <input type="text" name="addr2" value="<%= address.addr2 %>" >

        <label for="city">City:</label>
        <input type="text" name="city" value="<%= address.city %>" required>

        <label for="state">State/Province:</label>
        <input type="text" name="state" value="<%= address.state %>" required>

        <label for="postalCode">Postal Code:</label>
        <input type="text" name="postalCode" value="<%= address.postalCode %>" required>

        <label for="country">Country:</label>
        <input type="text" name="country" value="<%= address.country %>" required>

        <input type="submit" value="Save Address">
      </form>
    <% } %>
  </body>
</html>
